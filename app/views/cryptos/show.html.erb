

 <% for x in @show_crypto ['data'] %>
            <% if @crypto.symbol.upcase == x['symbol'] %>
            
              <% show_name = x["name"] %>

              <% show_price = x['quote']['USD']['price'] %> <!-- returns the current price of the crypto currency-->
              <% show_rank = x['cmc_rank'] %> <!-- returns the rank of the crypto currency -->

            <% end %>            
          <% end %>   



<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong> <%= show_name %></strong></h3>
  </div>
  <div class="panel-body">

 <h1> <%= @crypto.symbol.upcase %> </h1>

<p>
  <strong>Current Price:</strong>
  <%= number_to_currency(show_price) %>
</p>


<p>
  <strong>Cost per:</strong>
  <%=  number_to_currency(@crypto.cost_per) %>
</p>

<p>
  <strong>Amount owned:</strong>
  <%= @crypto.amount_owned %>
</p>




</div>
  </div>
  <div class="panel-footer">
  	<%= link_to 'Edit', edit_crypto_path(@crypto) %> |

	<%= link_to 'Delete', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' } %> |

	<%= link_to 'Back', cryptos_path %> 
</div>

</div>



